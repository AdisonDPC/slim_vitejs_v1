<!doctype html>
<html>
  <head>

    <title>{{ aPage.strTitle }}</title>

    <meta name="description" content="{{ aPage.strDescription }}">

  </head>
  <body>
    <h1>TEMPLATE POKEMONS (TWIG)</h1>
    <h2>Pokemons {{ aPage.strType }}</h2>
    <h3>Driver {{ aPage.strDriver }}</h3>

    <div>

      {% for pPokemon in aPokemons %}

        <div>
          <span>{{ pPokemon.name }}</span>
          <span> => </span>
          <img src="/assets/img/{{ '%03d' | format(pPokemon.id) }}.png" alt="{{ pPokemon.name }}" width="50" height="50">
        </div>

      {% endfor %}

    </div>
  </body>
</html>
